<h1>Add a Movie to the List</h1>
<p>Select a movie to add to the list</p>

      <%= simple_form_for [@list, @bookmark] do |f| %>
        <%= f.input :comment, placeholder: 'Comment' %>
        <%= f.association :movie, collection: @movies %>
        <div class='d-grid'>
          <%= f.submit 'Create Bookmark', class: 'btn btn-success' %>
        </div>
      <% end %>
